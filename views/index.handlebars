<!-- creating product -->
<div class="createProd">
  <h3 class="text-center">Create Product</h3>
  <hr/>
  <div class="container">
    <div class="row">
      <form method="post" action="/create">
        <div class="form-group">
          <input type="text" class="form-control"  placeholder="Enter any image path" name="imagePath">
        </div>
        <div class="form-group">
          <input type="text" class="form-control"  placeholder="Enter product title" name="title">
        </div>
        <div class="form-group">
          <input type="text" class="form-control"  placeholder="Enter product price" name="price">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-success">Create Product</button>
        </div>
        </form>
    </div>
  </div>
</div>




<!-- main Product -->
<h3 class="text-center">Our Products</h3>
<hr/>

<div class="container-fluid text-center">
  <div class="row ">
  {{#each products}}

      <div class="col-xs-12 col-sm-3 col-md-3">
        <div class="thumbnail">
          <img class="img-responsive" src="{{ this.imagePath }}" alt="Nike shoes">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <div class="clearfix">
              <div class="price pull-left">$ {{this.price}}</div>
              <a href="/users/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add To Cart</a>
            </div>
            <hr/>
            <div class="text-center">
              <a href="/singleView/{{this._id}}" class="badge option-badge"><i class="fas fa-eye"></i></a>
              <a href="#" class="badge option-badge"><i class="fas fa-edit"></i></a>
              <a href="/delete/{{this._id}}" class="badge option-badge"><i class="fas fa-trash-alt"></i></a>
            </div>
          </div>
        </div>
      </div>

  {{/each }}
  </div>
</div>
